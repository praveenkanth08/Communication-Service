{
  "name": "email-service",
  "version": "1.0.0",
  "description": "Email service with template support using Azure Communication Services - Azure Functions Only",
  "main": "dist/functions/index.js",
  "scripts": {
    "build": "tsc && tsc-alias",
    "clean": "rimraf dist",
    "lint": "eslint src/**/*.ts",
    "test": "jest",
    "start": "npm run build && func start",
    "dev": "npm run build && func start",
    "start:func": "npm run build && func start",
    "dev:func": "npm run build && func start",
    "build:prod": "tsc && tsc-alias",
    "watch": "tsc -w",
    "func:init": "func init --typescript --worker-runtime node",
    "func:deploy": "func azure functionapp publish",
    "prebuild": "npm run clean"
  },
  "keywords": [
    "email",
    "azure",
    "communication",
    "service",
    "typescript",
    "functions",
    "serverless"
  ],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "@azure/communication-email": "^1.0.0",
    "@azure/functions": "^4.7.2",
    "@Mahe-5563/commons": "^1.0.111",
    "dotenv": "^16.5.0",
    "joi": "^17.9.2",
    "path": "^0.12.7",
    "uuid": "^9.0.0",
    "winston": "^3.10.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.3",
    "@types/node": "^20.4.5",
    "@types/uuid": "^9.0.2",
    "@typescript-eslint/eslint-plugin": "^6.2.0",
    "@typescript-eslint/parser": "^6.2.0",
    "azure-functions-core-tools": "^4.0.5455",
    "eslint": "^8.45.0",
    "jest": "^29.6.1",
    "rimraf": "^5.0.1",
    "ts-jest": "^29.1.1",
    "tsc-alias": "^1.8.8",
    "typescript": "^5.1.6"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "funcIgnore": [
    "*.js.map",
    "*.ts.map",
    ".git*",
    ".vscode",
    "local.settings.json",
    "test",
    "tsconfig.json",
    ".funcignore",
    ".gitignore",
    "*.md",
    "src/"
  ]
}
